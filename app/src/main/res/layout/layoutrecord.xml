<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/androidbackgroundrecord">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvRecord"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />

    <ImageButton
        android:layout_width="180px"
        android:layout_height="80px"
        android:text="@string/btnRecordBack"
        android:id="@+id/btnRecordBack"
        android:background="#00000000"
        android:src="@drawable/back"
        android:scaleType="centerInside"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="跌倒紀錄："
        android:id="@+id/textView"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/btnRecordBack"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一鍵清除"
        android:id="@+id/btnDelete"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnRecordBack"
        android:layout_toEndOf="@+id/btnRecordBack" />

</RelativeLayout>
